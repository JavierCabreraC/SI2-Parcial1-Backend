{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "python -m venv --copies /opt/venv && . /opt/venv/bin/activate && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn pos_backend.wsgi:application",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}
